<!doctype html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Points of Interest</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/css/bootstrap.min.css"
        />
    </head>
    <body>
        <div class="container mt-5">
            <h1 class="text-center">Points of Interest</h1>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Country</th>
                        <th>Region</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Loop through and display each POI here -->
                    <% poiList.forEach(poi => { %>
                    <tr>
                        <td><%= poi.name %></td>
                        <td><%= poi.type %></td>
                        <td><%= poi.country %></td>
                        <td><%= poi.region %></td>
                        <td><%= poi.lat %></td>
                        <td><%= poi.lon %></td>
                        <td><%= poi.description %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/js/bootstrap.min.js"></script>
    </body>
</html>
